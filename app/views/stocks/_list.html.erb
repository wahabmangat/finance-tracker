	<div class="row">
		<div class="col-9">
			<table class="table table-hover table-bordered table-black">
				<thead>
					<tr>
						<th scope="col">Ticker</th>
						<th scope="col">Name</th>
						<th scope="col">Last Price</th>
						<th scope="col">Actions </th>
					</tr>
				</thead>

				<tbody>
				<% @tracked_stocks.each do |stock|%>
					<tr>
						<th scope="row"><%= stock.ticker%></th>
						<td><%= stock.name%></td>
						<td><%= stock.last_price%></td>
						<td>
              <% if current_user_id?(@user.id)%>
                <%= link_to 'Remove', user_stock_path(stock), method: :delete, data: {confirm: 'Are you sure?'},
                    class: 'btn btn-sm btn-warning' %>
              <% elsif current_user.can_track_stock?(stock.ticker) %>
					      <%= link_to 'Add to portfolio', user_stocks_path(user: current_user, ticker: stock.ticker),
						        class: "btn btn-success", method: :post
					      %>
              <% else %>
					      <span class="badge badge-secondary">
						     You are already tracking
						    <%= '10 stocks.' unless current_user.under_stock_limit?%>
						    <%= 'this stock' if current_user.stock_already_tracked?(stock.ticker)%>
					      </span>
              <%end%>
            </td>
					</tr>
				<% end%>
				</tbody>

			</table>

		</div>

	</div>
